{
  "compilerOptions": {
    "module": "ESNext", // Use ES modules
    "moduleResolution": "node", // Node.js-style module resolution
    "target": "ES6",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true // Enables ESM support for ts-node
  }
}
